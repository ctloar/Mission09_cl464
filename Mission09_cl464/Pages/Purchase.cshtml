@page
@model Mission09_cl464.Pages.PurchaseModel
@{
}

<h2>Your Cart</h2>

<!-- html content of the cart -->

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model.basket.Items)
         {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@(i.Quantity * i.Book.Price)</td>
            </tr>
         }
        
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString()</td>
        </tr>
    </tfoot>
    
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Keep shopping</a>
</div>